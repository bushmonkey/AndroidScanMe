<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="bushmonkey.scanme" >

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".DetailsCapture"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ViewDetails"
            android:label="@string/title_activity_view_details"
            android:parentActivityName=".DetailsCapture" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="bushmonkey.scanme.DetailsCapture" />
        </activity>
    </application>

</manifest>
